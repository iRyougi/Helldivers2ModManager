<Page x:Class="Helldivers2ModManager.Views.SettingsPageView"
	  x:ClassModifier="internal"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:vms="clr-namespace:Helldivers2ModManager.ViewModels"
	  xmlns:sys="clr-namespace:System;assembly=mscorlib"
	  xmlns:logging="clr-namespace:Microsoft.Extensions.Logging;assembly=Microsoft.Extensions.Logging.Abstractions"
	  mc:Ignorable="d"
	  d:DataContext="{d:DesignInstance vms:SettingsPageViewModel}"
	  d:Background="Black"
	  d:DesignWidth="800"
	  d:DesignHeight="600"
	  Title="{Binding Title}">
	<Page.Resources>
		<ObjectDataProvider x:Key="LogLevelEnumData"
							MethodName="GetValues"
							ObjectType="{x:Type sys:Enum}">
			<ObjectDataProvider.MethodParameters>
				<x:Type TypeName="logging:LogLevel"/>
			</ObjectDataProvider.MethodParameters>
		</ObjectDataProvider>
	</Page.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<ScrollViewer Grid.Row="0"
					  Margin="3">
			<StackPanel Margin="3">
				<TextBlock FontSize="24"
						   Foreground="White"
						   Text="{Binding GameDirectoryLabel}"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray"
						   Text="{Binding GameDirectoryDesc}"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray"
						   Text="{Binding GameDirectoryHint}"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<TextBox Text="{Binding GameDir, Mode=OneWay}"
							 IsReadOnly="True"
							 FontSize="18"
							 VerticalAlignment="Center"/>
					<Button Grid.Column="1"
							Content="{Binding AutoDetectLabel}"
							Command="{Binding DetectGameCommand}"/>
					<Button Grid.Column="2"
							Content="..."
							Command="{Binding BrowseGameCommand}"/>
				</Grid>
				<TextBlock FontSize="24"
						   Foreground="White"
						   Margin="0 10 0 0"
						   Text="{Binding StorageDirectoryLabel}"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray"
						   Text="{Binding StorageDirectoryDesc}"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="Red"
						   Text="{Binding StorageDirectoryWarning}"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<TextBox Text="{Binding StorageDir, Mode=OneWay}"
							 IsReadOnly="True"
							 FontSize="18"
							 VerticalAlignment="Center"/>
					<Button Content="..."
							Grid.Column="1"
							Command="{Binding BrowseStorageCommand}"/>
				</Grid>
				<TextBlock FontSize="24"
						   Foreground="White"
						   Margin="0 10 0 0"
						   Text="{Binding TempDirectoryLabel}"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray"
						   Text="{Binding TempDirectoryDesc}"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray"
						   Text="{Binding TempDirectoryItem1}"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray"
						   Text="{Binding TempDirectoryItem2}"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray"
						   Text="{Binding TempDirectoryItem3}"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<TextBox Text="{Binding TempDir, Mode=OneWay}"
							 IsReadOnly="True"
							 FontSize="18"
							 VerticalAlignment="Center"/>
					<Button Content="..."
							Grid.Column="1"
							Command="{Binding BrowseTempCommand}"/>
				</Grid>
				<TextBlock FontSize="24"
						   Foreground="White"
						   Margin="0 10 0 0"
						   Text="{Binding OpacityLabel}"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray"
						   Text="{Binding OpacityDesc}"/>
				<Slider HorizontalAlignment="Left"
						Width="200"
						Minimum="0.5"
						Maximum="1"
						TickFrequency="0.05"
						TickPlacement="BottomRight"
						IsSnapToTickEnabled="True"
						Value="{Binding Opacity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
				<TextBlock FontSize="24"
						   Foreground="White"
						   Margin="0 10 0 0"
						   Text="{Binding LanguageLabel}"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray"
						   Text="{Binding LanguageDesc}"/>
				<ComboBox HorizontalAlignment="Left"
						  Width="200"
						  ItemsSource="{Binding AvailableLanguages}"
						  SelectedItem="{Binding Language, Mode=TwoWay}"/>
				<TextBlock FontSize="24"
						   Foreground="White"
						   Margin="0 10 0 0"
						   Text="{Binding LogLevelLabel}"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray"
						   Text="{Binding LogLevelDesc}"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray"
						   Text="{Binding LogLevelDefault}"/>
				<ComboBox HorizontalAlignment="Left"
						  ItemsSource="{Binding Source={StaticResource LogLevelEnumData}}"
						  SelectedItem="{Binding LogLevel}"/>
				<TextBlock FontSize="24"
						   Foreground="White"
						   Margin="0 10 0 0"
						   Text="{Binding SearchLabel}"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					<CheckBox Grid.Row="0"
							  Grid.Column="0"
							  Width="30"
							  Height="30"
							  IsChecked="{Binding CaseSensitiveSearch}"
							  Margin="0 0 5 0"/>
					<TextBlock Grid.Row="0"
							   Grid.Column="1"
							   FontSize="12"
							   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
							   Foreground="DarkGray"
							   Text="{Binding CaseSensitiveLabel}"
							   VerticalAlignment="Center"/>
				</Grid>
				<TextBlock FontSize="24"
						   Foreground="White"
						   Margin="0 10 0 0"
						   Text="{Binding UtilitiesLabel}"/>
				<Button Content="{Binding ResetLabel}"
						Style="{DynamicResource CancelButton}"
						Command="{Binding ResetCommand}"
						HorizontalAlignment="Left"/>
				<TextBlock Grid.Column="0"
						   FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray"
						   Margin="0 0 0 5"
						   Text="{Binding ResetDesc}"/>
				<TextBlock FontSize="24"
						   Foreground="White"
						   Margin="0 10 0 0"
						   Text="{Binding DevOptionsLabel}"
						   TextDecorations="Underline"/>
				<TextBlock FontSize="18"
						   Foreground="White"
						   Margin="0 5 0 0"
						   Text="{Binding SkipListLabel}"/>
				<TextBlock Grid.Column="0"
						   FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray"
						   Margin="0 0 0 5"
						   Text="{Binding SkipListDesc}"/>
				<ListBox Width="300"
						 MinHeight="50"
						 ItemsSource="{Binding SkipList}"
						 HorizontalAlignment="Left"
						 BorderBrush="LightGray"
						 BorderThickness="3"
						 Background="Black"
						 SelectedIndex="{Binding SelectedSkip}">
					<ListBox.ItemTemplate>
						<DataTemplate DataType="{x:Type sys:String}">
							<TextBlock Text="{Binding}"
									   Foreground="White"
									   FontFamily="Consolas"/>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
				<StackPanel Orientation="Horizontal">
					<Button Command="{Binding AddSkipCommand}"
							Margin="0 3 3 3"
							Padding="10 0">
						<TextBlock Text="+"
								   FontSize="24"
								   FontFamily="../Resources/Fonts/#FS Sinclair Medium"/>
					</Button>
					<Button Command="{Binding RemoveSkipCommand}"
							Margin="0 3 3 3"
							Padding="10 0">
						<TextBlock Text="-"
								   FontSize="24"
								   FontFamily="../Resources/Fonts/#FS Sinclair Medium"/>
					</Button>
				</StackPanel>
			</StackPanel>
		</ScrollViewer>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Button Grid.Column="1"
					Content="{Binding BackLabel}"
					Command="{Binding BackCommand}"
					Style="{DynamicResource CancelButton}"
					HorizontalAlignment="Right"
					Margin="3"/>
			<Button Grid.Column="2"
					Content="{Binding OKLabel}"
					Command="{Binding OkCommand}"
					HorizontalAlignment="Right"
					Margin="3"/>
		</Grid>
	</Grid>
</Page>
